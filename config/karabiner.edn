{
 :layers {
             :hyper-mode {:key :caps_lock :alone {:key :escape }}
             :shift-hyper-mode {:key :shift :condi :hyper-mode}
             },
 :applications {
                :terminal ["^org\\.alacritty"]
                :rdp ["^com\\.microsoft\\.rdc\\.macos"]
                }
 :simlayer-threshold 1000
 :main [
        {:des "ctrlkeyterminal",
         :rules [
                 [:!FSv :!Cv [:terminal]]
                 [:!FSc :!Cc [:terminal]]
                 ]}
        {:des "ctrlnotterminal",
         :rules [
                 [:!Fa :!Ca [:!terminal :!rdp]]
                 [:!FSa :!CSa [:!terminal :!rdp]]
                 [:!Fc :!Cc [:!terminal :!rdp]]
                 [:!Ff :!Cf [:!terminal :!rdp]]
                 [:!Fk :!Ck [:!terminal :!rdp]]
                 [:!FSk :!CSk [:!terminal :!rdp]]
                 [:!Fl :!Cl [:!terminal :!rdp]]
                 [:!Fr :!Cr [:!terminal :!rdp]]
                 [:!Ft :!Ct [:!terminal :!rdp]]
                 [:!Fv :!Cv [:!terminal :!rdp]]
                 [:!FSv :!CSv [:!terminal :!rdp]]
                 [:!Fw :!Cw [:!terminal :!rdp]]
                 [:!Fx :!Cx [:!terminal :!rdp]]
                 [:!Fz :!Cz [:!terminal :!rdp]]
                 ]}
        {:des "capskey",
         :rules [:hyper-mode
                 [:x :!COx]
                 [:c :!COc]
                 [:v :!COv]
                 [:b :!COb]
                 [:t :!OCSt]
                 [:q :!Cq]
                 [:z :!OSz]
                 [:h :!OSh]
                 [:l :!OSl]
                 [:j :!OSj]
                 [:i :!OSi]
                 [:k :!OSk]
                 [:p :!OSp]
                 [:n :!OSn]
                 [:spacebar :!Cspacebar]
                 ]}
        {:des "generic",
         :rules [
                 [:!Fleft_arrow :!Oleft_arrow]
                 [:!FSleft_arrow :!OSleft_arrow]
                 [:!Fright_arrow :!Oright_arrow]
                 [:!FSright_arrow :!OSright_arrow]
                 [:!Fdelete_or_backspace :!Odelete_or_backspace]
                 [:!Fbutton1 :button1]
                 ]}
        ]
 }
